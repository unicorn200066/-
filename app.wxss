/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/*初始属性*/
page,view,text,image,navigator{
  padding:0;
  margin: 0;
  box-sizing: border-box;
  color:#3D3D3D;
}

page{
  /*主题颜色*/
  --themColor:#1296db;    /*    var(--themeColor)    */
  --grey:#cdcdcd;         /*    var(--grey)    */
  /*字体大小*/
  font-size: 28rpx;
}